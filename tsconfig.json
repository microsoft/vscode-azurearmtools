{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "noLib": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "strict": false, // TODO
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true
    },
    "exclude": [
        "node_modules"
    ]
}
