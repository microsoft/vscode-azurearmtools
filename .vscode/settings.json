{
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
        "out": true,
        "**/node_modules": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".vscode-test": true,
        "out": true
    },
    "files.associations": {
        "tslint.json": "jsonc"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "ExpressionMetadata.json",
                "TestData.ExpressionMetadata.json",
            ],
            "url": "assets/schemas/ExpressionMetadata.schema.json"
        },
        {
            "fileMatch": [
                "*snippets.json"
            ],
            "url": "assets/schemas/snippets.schema.json"
        }
    ],
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true
}
